# GlycemicGPT -- Production (Cloudflare Tunnel) environment
# Copy to .env and fill in ALL values before starting.

# Image version (default: latest)
# IMAGE_TAG=0.5.0

# Cloudflare Tunnel (REQUIRED)
# Create a tunnel at https://one.dash.cloudflare.com -> Networks -> Tunnels
# Point the tunnel's public hostname at http://web:3000
CLOUDFLARE_TUNNEL_TOKEN=

# Database (REQUIRED)
POSTGRES_USER=glycemicgpt
# Generate: openssl rand -hex 32
POSTGRES_PASSWORD=
POSTGRES_DB=glycemicgpt

# Redis (REQUIRED)
# Generate: openssl rand -hex 32
REDIS_PASSWORD=

# API secret key (REQUIRED -- generate: openssl rand -hex 32)
SECRET_KEY=

# AI Sidecar
SIDECAR_API_KEY=

# CORS -- required for mobile app access. Replace with your domain:
CORS_ORIGINS=["https://glycemicgpt.example.com"]

# AI URL safety -- set false for cloud deployments to block private-network AI URLs
ALLOW_PRIVATE_AI_URLS=false

# Logging
LOG_FORMAT=json
