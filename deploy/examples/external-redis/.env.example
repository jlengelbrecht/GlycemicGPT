# GlycemicGPT -- Production (External Redis/Valkey) environment
# Copy to .env and fill in ALL values before starting.

# Image version (default: latest)
# IMAGE_TAG=0.5.0

# External Redis/Valkey (REQUIRED)
# Standard Redis URL format -- works with Redis, Valkey, ElastiCache, etc.
REDIS_URL=redis://:<your-redis-password>@valkey.local:6379/0
# TLS example:
# REDIS_URL=rediss://:<your-redis-password>@redis.example.com:6380/0

# Database (REQUIRED)
POSTGRES_USER=glycemicgpt
POSTGRES_PASSWORD=  # Generate: openssl rand -hex 32
POSTGRES_DB=glycemicgpt

# API secret key (REQUIRED -- generate: openssl rand -hex 32)
SECRET_KEY=

# AI Sidecar
SIDECAR_API_KEY=

# Port configuration (if not behind a reverse proxy)
# API_PORT=8000
# WEB_PORT=3000

# CORS -- required for mobile app access. Replace with your domain:
CORS_ORIGINS=["https://glycemicgpt.example.com"]

# Logging
LOG_FORMAT=json
